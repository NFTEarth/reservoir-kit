{
  "name": "@reservoir0x/reservoir-kit",
  "version": "0.1.0",
  "description": "ReservoirKit is the official frontend kit to get you started building dApps with the ReservoirProtocol.",
  "source": "src/index.ts",
  "main": "dist/main.js",
  "types": "dist/index.d.ts",
  "author": "Reservoir Protocol",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "lint": "prettier --write .",
    "dev": "parcel watch",
    "build": "parcel build",
    "prepare": "yarn build",
    "push:tag": "git tag -a $npm_package_version -m '$npm_package_version'; git push --tags",
    "major:tag": "npm version major; npm run push:tag",
    "minor:tag": "npm version minor; npm run push:tag",
    "patch:tag": "npm version patch; npm run push:tag"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reservoirprotocol/reservoir-kit"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "keywords": [
    "nft",
    "reservoir",
    "reservoirkit",
    "protocol",
    "sdk"
  ],
  "devDependencies": {
    "@parcel/packager-ts": "2.6.2",
    "@parcel/transformer-typescript-types": "^2.6.2",
    "@types/node": "^17.0.10",
    "parcel": "^2.6.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "ethers": "^5.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
